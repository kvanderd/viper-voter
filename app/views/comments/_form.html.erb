
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
				<%= form_for([@change, @change.comments.build], :html => {:role => "form"}, remote: true) do |t| %>
				<%= t.hidden_field :parent_id, :value => params[:parent_id] %>
				<div class="form-group">
					<%= t.text_area :content, class: "form-control", required: true %>
				</div>
					<%= t.submit class: "btn btn-default" %>
				<% end %>
		</div>
	</div>
