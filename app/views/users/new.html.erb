<div class="row">
	<div class="col-md-8">
		<%= form_for @user, :html => {:role => "form"} do |t| %>
		 <%= render "shared/error_messages", :target => @user %>
		   <div class="form-group">
				<%= t.label :username %>
				<%= t.text_field :username, class: "form-control", required: true %>
			</div>
			<div class="form-group">
			 <%= t.label :category %>
			 <%= t.password_field :category, class: "form-control", required: true %>
			</div>
			<div class="form-group">
			<%= t.label :password %>
			 <%= t.password_field :password, class: "form-control", required: true %>
			</div>
			<div class="form-group">
			 <%= t.label :confirm_password %>
			 <%= t.password_field :password_confirmation, class: "form-control", required: true %>
			</div>
			<%= t.submit class: "btn btn-default" %>
		<% end %>
	</div>
	<div class="col-md-4">
		<h3></h3>
	</div>
</div>
